              <option value="Logistics/Supply Chain/Shipping">Logistics/Supply Chain/Shipping</option>
              <option value="Sales/Retail/Real Estate">Sales/Retail/Real Estate</option>
              <option value="Other">Other</option>
            </select>
          </div>
          <div class="mb-3">
            <label for="goal" class="form-label">Milestone Goal</label>
            <input for="text" class="form-control" id="goal" name="goal" required>
          </div>
          <button type="submit" class="btn btn-primary" value="Upload">Submit</button>
        </form>

